<div class="container">
  <h1 class="text-center font-weight-bolder">会員情報編集</h1>
  <div class="text-center mt-5">
    <%= form_with model: @user, method: :patch do |f| %>
      <h4 class="font-weight-bolder m-3">ユーザーネーム</h4>
      <%= f.text_field :name %>
      <h4 class="font-weight-bolder m-3">E-Mail Address</h4>
      <%= f.text_field :email, class:"col-7" %>
      <div class="mt-4">
        <%= f.submit "変更", class:"btn btn-success" %>
        <% if current_user.name == "admin" %>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, '有効', value: false %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, '退会', value: true %>
        <% else %>
          <%= link_to "退会", user_unsubscribe_path(@user), class:"btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>