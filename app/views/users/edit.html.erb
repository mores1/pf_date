
<div class = "container">
  <div class="col-12 col-md-8">
    <%= form_with model: @user, method: :patch do |f| %>
    <table class = "table table-borderless">
      <h4><mark class="bg-light">会員情報編集</mark></h4>
      <thead>
        <div class="form-group row">
          <%= f.label :"ユーザーネーム", class:"col-sm-3 col-form-label" %>
          <div class="col-md-3">
            <%= f.text_field :name, class:"form-control field_border" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :メールアドレス, class:"col-sm-3 col-form-label" %>
          <div class="col-md-3">
            <%= f.text_field :email, class: 'form-control field_border' %>
          </div>
        </div>
        <div class="form-group row">
         <div class="col-md-3 offset-3">
          <%= f.submit "変更内容を保存", class:"btn btn-success btn-block btn-sm" %>
         </div>
         <div class="col-md-3 offset-2">
          <%= link_to "退会する", user_unsubscribe_path(@user), class:"btn btn-danger btn-block btn-sm"%>
         </div>
        </div>
      </thead>
    </table>
    <% end %>
  </div>
</div>