<div class="container text-center">
  <h1 class="text-center font-weight-bolder">ユーザー一覧</h1>
  <div class="user-box col-9">
    <ul class="user-list">
      <% users.each do |user| %>
      <li class="font-weight-bolder">
        <%= link_to user_path(user) do %>
         <i class="fas fa-user-circle"></i> <%= user.name %>さん
        <% end %>
      </li>
      <% end %>
    </ul>
    <%= paginate users %>
  </div>
</div>
